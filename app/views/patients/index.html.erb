<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>Kipu account number</th>
      <th>Admission date</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Middle initial</th>
      <th>Gender</th>
      <th>Marital status</th>
      <th>Diagnoses codes</th>
      <th>Race</th>
      <th>Ethnicity</th>
      <th>Ssn</th>
      <th>Dob</th>
      <th>Phone</th>
      <th>Alt phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.kipu_account_number %></td>
        <td><%= patient.admission_date %></td>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.middle_initial %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.marital_status %></td>
        <td><%= patient.diagnosis_codes %></td>
        <td><%= patient.race %></td>
        <td><%= patient.ethnicity %></td>
        <td><%= patient.ssn %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.alt_phone %></td>
        <td><%= patient.email %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

