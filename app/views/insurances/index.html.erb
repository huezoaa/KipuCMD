<p id="notice"><%= notice %></p>

<h1>Listing Insurances</h1>

<table>
  <thead>
    <tr>
      <th>Patient_ID</th>
      <th>Payment method</th>
      <th>Company</th>
      <th>Policy no</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.patient_id %></td>
        <td><%= insurance.payment_method %></td>
        <td><%= insurance.company %></td>
        <td><%= insurance.policy_no %></td>
        <td><%= insurance.group_id %></td>
        <td><%= link_to 'Show', insurance %></td>
        <td><%= link_to 'Edit', edit_insurance_path(insurance) %></td>
        <td><%= link_to 'Destroy', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

